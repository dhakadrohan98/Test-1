package org.codeship;

class Brackets{
	
	private static String threadCode;
	
	public Brackets(String threadCode) {
		super();
		this.threadCode = threadCode;
	}

	synchronized static public void generate() {
		for(int i=1; i<=10; i++) {
			if(i<=5) {
				System.out.print("[");
			}
			else {
				System.out.print("]");
			}
		}
		System.out.println("Generated by thread: " +threadCode);
	}
}

/* 
 * Sychronized method approach
 * Time Required: 5700 ms
 * 
 * Sychronized block approach
 * Time Required: 3900 ms
 * */

public class App {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
//		Brackets bracket1 = new Brackets("Thread 1");
//		Brackets bracket2 = new Brackets("Thread 2");
		
		new Thread(new Runnable() {
			
			@Override
			public void run() {
				for(int i=1; i<=5; i++) {
					Brackets.generate();
				}
			}
		}).start();
		
		new Thread(new Runnable() {
			
			@Override
			public void run() {
				for(int i=1; i<=5; i++) {
					Brackets.generate();
				}
			}
		}).start();

	}
}
