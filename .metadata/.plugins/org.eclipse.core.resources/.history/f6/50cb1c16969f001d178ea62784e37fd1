package org.codeship;

public class App {
	
	public int flag=0;

	public static void main(String[] args) {
		new Thread(new Runnable() {

			@Override
			public void run() {
				while(true) {
					if(flag == 0) {
						System.out.println("Running");
					}
					else {
						break;
					}
				}
			}
		}).start();
		
		new Thread(new Runnable() {

			@Override
			public void run() {
				Thread.sleep(5000);
			}
		}).start();
		
	}

}
